{% extends "../partials/shortFormatPageLayout.njk" %}

{% set currentPage = 'Sign your report' %}
{% set pageTitle = preSentenceType + " - " + currentPage %}

{% block reportForm %}

  <h1 class="govuk-heading-l">{{ currentPage }}</h1>

  <form method="post" novalidate>
    {% from "govuk/components/input/macro.njk" import govukInput %}

    {{ govukInput({
      label: {
        text: "Report author"
      },
      errorMessage: {
        text: "Enter the report author"
      } if "reportAuthor" in elementsWithError,
      id: "reportAuthor",
      name: "reportAuthor",
      value: data.reportAuthor
    }) }}

    {{ govukInput({
      label: {
        text: "Office"
      },
      errorMessage: {
        text: "Enter the office"
      } if "office" in elementsWithError,
      id: "office",
      name: "office",
      value: data.office
    }) }}

    {{ govukInput({
      label: {
        text: "Court office phone number"
      },
      errorMessage: {
        text: "Enter the court office phone number"
      } if "courtOfficePhoneNumber" in elementsWithError,
      id: "courtOfficePhoneNumber",
      name: "courtOfficePhoneNumber",
      value: data.courtOfficePhoneNumber
    }) }}

    <h2 class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1">Start date</h2>
    <p class="govuk-body">{{ data.startDate }}</p>

    {% from "govuk/components/date-input/macro.njk" import govukDateInput %}

    {{ govukDateInput({
      id: "reportDate",
      namePrefix: "reportDate",
      fieldset: {
        legend: {
          text: "Completion date"
        }
      },
      errorMessage: {
        text: "Enter a valid date, month and year"
      } if 'reportDate-day' in elementsWithError or 'reportDate-month' in elementsWithError or 'reportDate-year' in elementsWithError,
      hint: {
        text: "For example, 31 3 2021"
      },
      items: [
        {
          classes: "govuk-input--width-2" + (" govuk-input--error" if 'reportDate-day' in elementsWithError),
          name: "day",
          value: data["reportDate-day"]
        },
        {
          classes: "govuk-input--width-2" + (" govuk-input--error" if 'reportDate-month' in elementsWithError),
          name: "month",
          value: data["reportDate-month"]
        },
        {
          classes: "govuk-input--width-4" + (" govuk-input--error" if 'reportDate-year' in elementsWithError),
          name: "year",
          value: data["reportDate-year"]
        }
      ]
    }) }}

    <button class="govuk-button govuk-!-margin-top-6">Submit and view your report</button>
  </form>

{% endblock %}
